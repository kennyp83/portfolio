  }
}

/* Magical cursor trail effect */
.cursor-trail {
  position: fixed;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--primary);
  pointer-events: none;
  z-index: 9999;
  opacity: 0;
  animation: trailFade 0.5s ease-out forwards;
  box-shadow: 0 0 10px var(--primary);
}

@keyframes trailFade {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(0);
  }
}

/* Shake animation for errors */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-10px); }
  20%, 40%, 60%, 80% { transform: translateX(10px); }
}

.shake {
  animation: shake 0.5s ease-in-out;
}

/* Pulse glow animation for important elements */
@keyframes pulseGlow {
  0%, 100% {
    box-shadow: 0 0 10px rgba(200, 155, 60, 0.3);
  }
  50% {
    box-shadow: 0 0 30px rgba(200, 155, 60, 0.6), 0 0 60px rgba(200, 155, 60, 0.3);
  }
}

.pulse-glow {
  animation: pulseGlow 2s ease-in-out infinite;
}

/* ============================================
   CHAMPION RANKINGS PAGE STYLES
   ============================================ */

.champions-header {
  text-align: center;
  margin-bottom: var(--space-8);
  padding-top: calc(80px + var(--space-8));
}

.role-selector {
  display: flex;
  justify-content: center;
  gap: var(--space-2);
  margin-top: var(--space-6);
  flex-wrap: wrap;
}

.role-btn {
  padding: var(--space-3) var(--space-5);
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  color: var(--text-secondary);
  font-family: var(--font-sans);
  font-weight: 600;
  font-size: 0.9375rem;
  text-transform: capitalize;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.role-btn:hover {
  background: var(--bg-tertiary);
  border-color: var(--border-secondary);
  color: var(--text-primary);
}

.role-btn.active {
  background: var(--primary);
  color: var(--text-inverse);
  border-color: var(--primary);
  box-shadow: var(--shadow-md);
}

.champions-stats {
  display: flex;
  justify-content: center;
  gap: var(--space-6);
  margin-bottom: var(--space-8);
  flex-wrap: wrap;
}

.stat-pill {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-4) var(--space-6);
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  min-width: 120px;
}

.stat-number {
  font-family: var(--font-mono);
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
  margin-bottom: var(--space-2);
}

.stat-text {
  font-size: 0.875rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.champions-table {
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  overflow: hidden;
  border: 1px solid var(--border-primary);
}

.champions-table .table-header {
  display: grid;
  grid-template-columns: 80px 2fr 100px 120px 120px 120px;
  gap: var(--space-4);
  padding: var(--space-4) var(--space-6);
  background: var(--bg-tertiary);
  border-bottom: 1px solid var(--border-primary);
  font-family: var(--font-sans);
  font-weight: 700;
  color: var(--text-primary);
  text-transform: uppercase;
  font-size: 0.8125rem;
  letter-spacing: 0.05em;
}

.champions-table .table-row {
  display: grid;
  grid-template-columns: 80px 2fr 100px 120px 120px 120px;
  gap: var(--space-4);
  padding: var(--space-4) var(--space-6);
  border-bottom: 1px solid var(--border-primary);
  transition: all var(--transition-fast);
  align-items: center;
}

.champions-table .table-row:hover {
  background: var(--bg-tertiary);
}

.champions-table .table-row:last-child {
  border-bottom: none;
}

.champion-col {
  display: flex;
  align-items: center;
}

.champion-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.champion-icon {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-md);
  border: 2px solid var(--border-secondary);
  object-fit: cover;
}

.champion-icon-placeholder {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-md);
  border: 2px solid var(--border-secondary);
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 1rem;
  color: var(--text-inverse);
}

.champion-name {
  font-weight: 600;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-badge {
  padding: var(--space-1) var(--space-3);
  border-radius: var(--radius-md);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  text-align: center;
  font-family: var(--font-mono);
}

.role-badge.top {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.2);
}

.role-badge.jungle {
  background: rgba(34, 197, 94, 0.1);
  color: var(--success);
  border: 1px solid rgba(34, 197, 94, 0.2);
}

.role-badge.mid {
  background: rgba(139, 92, 246, 0.1);
  color: var(--secondary);
  border: 1px solid rgba(139, 92, 246, 0.2);
}

.role-badge.adc {
  background: rgba(251, 191, 36, 0.1);
  color: var(--warning);
  border: 1px solid rgba(251, 191, 36, 0.2);
}

.role-badge.support {
  background: rgba(59, 130, 246, 0.1);
  color: var(--primary);
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.winrate-value.high {
  color: var(--success);
  font-weight: 700;
}

.winrate-value.low {
  color: var(--danger);
  font-weight: 700;
}

.pickrate-value,
.banrate-value {
  color: var(--text-secondary);
  font-family: var(--font-mono);
  font-size: 0.9375rem;
}

@media (max-width: 1024px) {
  .champions-table .table-header,
  .champions-table .table-row {
    grid-template-columns: 60px 2fr 90px 100px;
    font-size: 0.875rem;
  }
  
  .pickrate-col,
  .banrate-col {
    display: none;
  }
}

@media (max-width: 768px) {
  .role-selector {
    gap: var(--space-1);
  }
  
  .role-btn {
    padding: var(--space-2) var(--space-3);
    font-size: 0.875rem;
  }
  
  .champions-table .table-header,
  .champions-table .table-row {
    grid-template-columns: 50px 2fr 80px;
    padding: var(--space-3) var(--space-4);
  }
  
  .role-col,
  .pickrate-col,
  .banrate-col {
    display: none;
  }
}

/* ============================================
   PROJECTS PAGE STYLES
   ============================================ */

.page-header {
  text-align: center;
  margin-bottom: var(--space-12);
  padding-top: calc(80px + var(--space-12));
}

.projects-grid {
  display: grid;
  gap: var(--space-6);
  margin-bottom: var(--space-12);
  max-width: 1200px;
  margin: 0 auto var(--space-12);
  padding: 0 var(--space-6);
}

.project-card {
  padding: var(--space-8);
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-5);
  flex-wrap: wrap;
  gap: var(--space-4);
}

.project-header h2 {
  margin: 0;
  font-size: 1.75rem;
}

.project-tags {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
}

.tag {
  padding: var(--space-1) var(--space-3);
  background: var(--bg-tertiary);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--text-tertiary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-family: var(--font-mono);
}

.project-features {
  margin: var(--space-5) 0;
  padding: var(--space-5);
  background: var(--bg-tertiary);
  border-radius: var(--radius-lg);
  border-left: 3px solid var(--primary);
}

.feature-item {
  padding: var(--space-2) 0;
  color: var(--text-secondary);
  font-size: 0.9375rem;
}

.feature-item:not(:last-child) {
  border-bottom: 1px solid var(--border-primary);
}

.project-links {
  display: flex;
  gap: var(--space-3);
  margin-top: var(--space-5);
  flex-wrap: wrap;
}

/* Skills Section */
.skills-section {
  margin-top: var(--space-12);
  max-width: 1200px;
  margin: var(--space-12) auto 0;
  padding: 0 var(--space-6);
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-6);
  margin-top: var(--space-6);
}

.skill-category h3 {
  font-size: 1.125rem;
  color: var(--text-primary);
  margin-bottom: var(--space-4);
  font-family: var(--font-sans);
}

.skill-items {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.skill-badge {
  padding: var(--space-2) var(--space-4);
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  color: var(--text-secondary);
  transition: all var(--transition-fast);
  font-family: var(--font-mono);
}

.skill-badge:hover {
  background: var(--bg-tertiary);
  border-color: var(--border-secondary);
  color: var(--text-primary);
  transform: translateY(-1px);
}

@media (max-width: 768px) {
  .projects-grid,
  .skills-section {
    padding: 0 var(--space-4);
  }
  
  .project-card {
    padding: var(--space-6);
  }
  
  .skills-grid {
    grid-template-columns: 1fr;
  }
}
